<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Employees</title>
	<link rel="stylesheet" type="text/css" href="css/frontend.css">
	
</head>
<body>
	<%-include('partials/navigation') %>
	<div id="main">
		
		<div class="table-responsive">          
			<table class="table">
				<thead>
					<th>Sr.No.</th>
					<th>Id</th>
					<th>Photo</th>
					<th>Name</th>
					<th>Email</th>
					<th> Orders</th>
					<th>Created at</th>
					
					<th>Action</th>
				</thead>
				<tbody id="tbody">
					<%
					if(userData.length!=0){
					var i=1;
					userData.forEach(function(data){
					%>
					<tr>
						<td style="vertical-align: center;"><%=i %></td>							
						<td><%=data. user_id %></td>
						<td><img src="/images/<%=data.user_image %>" style="width: 80px; height: 80px;"   alt="--"></td>
						<td><%=data.user_name %></td>
						<td><%=data.user_email %></td>
						<td><%=data.total_orders %></td>
						<td><%=data.created_at %></td>
						
						<td>
							<a type="button" href="/routes/details/<%=data.user_id%>"><span>Update</span></a>
							<a type="button" href="/routes/images/<%=data.user_id%>"><span>See Image</span></a>   
							<form action="/routes/delete/<%=data.user_id%>" method="POST">
								<input type="hidden", name="_method", value="">
								<button type="submit">X</button>
							</form>
						</td>	
					</tr>																
					<%  i++; }) %>
					<% } else{ %>
						<tr>
							<td colspan="9">No Data Found</td>
						</tr>
					<% } %>
				</tbody>
			</table>
			</div>	
		
		
		</div>		
	</div>
	<script  type="text/javascript" src="./js/script.js"></script>	
</body>
</html>
